{
  "name": "capacitor-nanosqlite",
  "version": "0.0.1",
  "description": "Nano SQL Capacitor adapter",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "dist/",
    "src/"
  ],
  "author": "Eko Eryanto<ekoeryanto@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ekoeryanto/nano-sql-capacitor.git"
  },
  "bugs": {
    "url": "https://github.com/ekoeryanto/nano-sql-capacitor/issues"
  },
  "keywords": [
    "capacitor",
